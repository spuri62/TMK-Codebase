{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Model",
  "type": "object",
  "properties": {
    "model": { "type": "string", "enum": ["Knowledge"] },
    "concepts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "superConcept": {
            "type": "array",
            "items": { "type": "string" }
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["name", "type"]
            }
          }
        },
        "required": ["name"]
      }
    },
    "instances": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "concept": { "type": "string" },
          "values": { "type": "object" }
        },
        "required": ["name", "concept"]
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "domain": { "type": "string" },
          "range": { "type": "string" }
        },
        "required": ["name", "domain", "range"]
      }
    },
    "triples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "instance1": { "type": "string" },
          "relation": { "type": "string" },
          "instance2": { "type": "string" }
        },
        "required": ["instance1", "relation", "instance2"]
      }
    },
    "assertions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "equivalentTo": { "type": "string" }
        },
        "required": ["name", "description", "equivalentTo"]
      }
    }
  },
  "required": ["model", "concepts", "instances"]
}
