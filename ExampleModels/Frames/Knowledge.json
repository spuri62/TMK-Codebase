    { "name": "text", "description": "Unstructured natural language data." },
    { "name": "shape", "description": "Geometric object in RPM problems", "properties": ["name", "type", "size", "fill", "inside", "above"] },
    { "name": "newsStory", "description": "A representation of a news story documenting an event.", "properties": ["day", "location", "damage", "fatalities", "faultline", "magnitude", "time", "type", "duration"] }
